general {
        colors = true
        interval = 5
}

order += "wireless _first_"
#order += "ethernet _first_"
#order += "run_watch DHCP"
#order += "run_watch VPNC"
order += "path_exists VPN"
order += "battery all"
#order += "cpu_usage"
order += "load"
order += "cpu_temperature 0"
order += "memory"
order += "disk /"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "ï‡« (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPNC {
        # file containing the PID of a vpnc process
        pidfile = "/var/run/vpnc/pid"
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
}

battery all {
        format = "%status %percentage %remaining"
        format_down = "No battery"
        status_chr = "âš¡ CHR:"
        status_bat = "ðŸ”‹ BAT:"
        status_unk = "? UNK"
        status_full = "â˜» FULL:"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 30
}

disk "/" {
        format = "ïˆ€ SDA: %avail"
}

memory {
        format = "ï‡¾ RAM: %used"
        threshold_degraded = "15%"
	      threshold_critical = "5%"
        format_degraded = "Low: %free"
}

cpu_temperature 0 {
        format = "ï‹‰ T: %degrees Â°C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_input"
	max_threshold = 75
	format_above_threshold = "Warning T: %degrees Â°C"
}

cpu_usage {
        format = "ï‹› CPU: %usage"
        max_threshold = 75
        format_above_threshold = "Warning: %usage"
        degraded_threshold = 25
        format_above_degraded_threshold = "Warning degraded: %usage"
}

load {
        format = "L: %1min"
        max_threshold = "0,9"
        format_above_threshold = "Warning L: %1min"
}

